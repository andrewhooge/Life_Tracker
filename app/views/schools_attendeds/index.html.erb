<h1>Schools Attended</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>School</th>
      <th>Beginning year</th>
      <th>Ending year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools_attendeds.each do |school| %>
      <tr>
        <td><%= school_attendeds.person.merg %></td>
        <td><%= school_attendeds.school %></td>
        <td><%= school_attendeds.beginning_year %></td>
        <td><%= school_attendeds.ending_year %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>
</body>
